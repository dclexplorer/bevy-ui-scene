{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~system/*": ["src/system/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/ui-classes/main-menu/map-page", "assets/images/atlas/*.json"],
  "extends": "@dcl/sdk/types/tsconfig.ecs7.json"
}
